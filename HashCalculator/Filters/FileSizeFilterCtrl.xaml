<UserControl
    x:Class="HashCalculator.FileSizeFilterCtrl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HashCalculator"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=local:FileSizeFilter}"
    d:DesignHeight="160"
    d:DesignWidth="350"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" MinWidth="100" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            VerticalAlignment="Center"
            Text="文件大小下限：" />
        <TextBox
            Grid.Row="0"
            Grid.Column="1"
            Padding="0,2"
            VerticalAlignment="Center"
            Text="{Binding MinFileSize, Converter={StaticResource StringToDoubleDefaultZeroCvt}}" />
        <ComboBox
            Grid.Row="0"
            Grid.Column="2"
            MinWidth="47"
            Margin="4,0,0,0"
            VerticalAlignment="Center"
            DisplayMemberPath="Display"
            ItemsSource="{Binding Items}"
            SelectedItem="{Binding MinSizeUnit}" />
        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            Margin="0,4,0,0"
            VerticalAlignment="Center"
            Text="文件大小上限：" />
        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,4,0,0"
            Padding="0,2"
            VerticalAlignment="Center"
            Text="{Binding MaxFileSize, Converter={StaticResource StringToDoubleDefaultZeroCvt}}" />
        <ComboBox
            Grid.Row="1"
            Grid.Column="2"
            MinWidth="47"
            Margin="4,4,0,0"
            VerticalAlignment="Center"
            DisplayMemberPath="Display"
            ItemsSource="{Binding Items}"
            SelectedItem="{Binding MaxSizeUnit}" />
        <TextBlock
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Margin="0,4,0,0"
            FontSize="8pt"
            Style="{StaticResource DescTextBlockStyle}"
            Text="如果【文件大小上限 &lt; 文件大小下限】则代表不设上限" />
    </Grid>
</UserControl>
