<UserControl
    x:Class="HashCalculator.SerialNumberFilterCtrl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HashCalculator"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=local:SerialNumberFilter}"
    d:DesignHeight="160"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <StackPanel Orientation="Horizontal">
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center" Text="开始：" />
                <TextBox
                    MinWidth="100"
                    Padding="0,2"
                    Text="{Binding SerialLeft}" />
            </StackPanel>
            <StackPanel Margin="0,4,0,0" Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center" Text="结束：" />
                <TextBox
                    MinWidth="100"
                    Padding="0,2"
                    Text="{Binding SerialRight}" />
            </StackPanel>
        </StackPanel>
    </StackPanel>
</UserControl>
