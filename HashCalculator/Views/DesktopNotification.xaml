<Border
    x:Class="HashCalculator.DesktopNotification"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HashCalculator"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="360"
    Height="Auto"
    Margin="8,100,8,8"
    d:DataContext="{d:DesignInstance Type=local:DesktopNotificationModel}"
    Background="White"
    BorderThickness="1"
    CacheMode="BitmapCache"
    CornerRadius="8"
    SnapsToDevicePixels="True"
    mc:Ignorable="d">
    <Border.Effect>
        <DropShadowEffect
            BlurRadius="10"
            Direction="315"
            Opacity="0.8"
            ShadowDepth="2"
            Color="DarkGray" />
    </Border.Effect>
    <Grid Margin="8,12,8,8">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" ClipToBounds="False">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="10*" />
            </Grid.ColumnDefinitions>
            <Image
                Grid.Column="0"
                Margin="0,8"
                VerticalAlignment="Top"
                Source="{Binding Type, Converter={StaticResource NotificationTypeToToDrawingImageCvt}}" />
            <ScrollViewer Grid.Column="1" Margin="8,0,0,0">
                <Grid VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        Text="{Binding Message}"
                        TextTrimming="WordEllipsis"
                        TextWrapping="Wrap" />
                    <TextBlock
                        Grid.Row="1"
                        Margin="0,5,0,0"
                        Foreground="{DynamicResource SecondaryTextBrush}"
                        Text="{Binding Timestamp, StringFormat={}{0:yyyy/MM/dd HH:mm:ss}}" />
                </Grid>
            </ScrollViewer>
        </Grid>
        <Button
            Name="PART_ButtonClose"
            Grid.Row="1"
            Width="18"
            Height="18"
            Margin="0,8,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="Transparent"
            Click="ButtonClose_OnClick"
            Style="{StaticResource ButtonCustom}"
            Visibility="Visible">
            <Path
                Data="{StaticResource ErrorGeometry}"
                Fill="{DynamicResource SecondaryTextBrush}"
                FlowDirection="LeftToRight"
                Stretch="Uniform" />
        </Button>
    </Grid>
</Border>
