<Window
    x:Class="HashCalculator.SettingsPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HashCalculator"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="设置"
    Width="{Binding SettingsWndWidth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
    Height="{Binding SettingsWndHeight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
    d:DataContext="{d:DesignInstance Type=local:SettingsViewModel}"
    Closing="SettingsPanelClosing"
    KeyDown="SettingsPanelKeyDown"
    ShowInTaskbar="False"
    UseLayoutRounding="True"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/ConverterResource.xaml" />
                <ResourceDictionary Source="/Resources/DataGridCellStyles.xaml" />
                <ResourceDictionary Source="/Resources/DataGridRowStyles.xaml" />
                <ResourceDictionary Source="/Resources/TabControlItemStyles.xaml" />
                <ResourceDictionary Source="/Resources/TabControlStyles.xaml" />
                <ResourceDictionary Source="/Resources/DescTextBlockStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <TabControl
        Margin="8"
        Style="{DynamicResource TabControlStyle1}"
        TabStripPlacement="Left">
        <TabItem
            Padding="8"
            Header="常规设置选项"
            Style="{StaticResource TabItemStyle1}">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="8">
                    <GroupBox Foreground="#FF006FD6" Header="文件搜索策略">
                        <StackPanel>
                            <StackPanel Margin="0,8,0,0" Orientation="Horizontal">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Foreground="Black"
                                    Text="当选择或拖放的多个待计算对象中包含文件夹时：" />
                                <ComboBox
                                    DisplayMemberPath="Display"
                                    ItemsSource="{Binding AvailableDroppedSearchMethods}"
                                    SelectedValue="{Binding SelectedSearchMethodForDragDrop, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    SelectedValuePath="ItemValue" />
                            </StackPanel>
                            <StackPanel Margin="0,8,0,4" Orientation="Horizontal">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Foreground="Black"
                                    Text="当有需要时如何搜索校验依据文件内列出的文件：" />
                                <ComboBox
                                    DisplayMemberPath="Display"
                                    ItemsSource="{Binding AvailableQVSearchMethods}"
                                    SelectedValue="{Binding SelectedSearchMethodForChecklist, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    SelectedValuePath="ItemValue"
                                    ToolTip="当表格为空时，如果校验依据选择的是通用格式的哈希值文本文件，则：&#10;点击 [校验] 后程序会自动解析文件并在相同目录下寻找要计算哈希值的文件完成计算并显示校验结果。&#10;通用格式的哈希值文件请参考程序 [导出结果] 功能导出的文件的内容排布格式。" />
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox
                        Margin="0,8,0,0"
                        Foreground="#FF006FD6"
                        Header="当需要查找校验依据内列出的文件进行计算并校验时">
                        <StackPanel>
                            <RadioButton
                                Margin="0,8,0,0"
                                Padding="4,0,0,0"
                                Content="使用【默认算法】中被勾选的算法"
                                IsChecked="{Binding PreferChecklistAlgs, Converter={StaticResource ReverseBooleanValueCvt}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <RadioButton
                                x:Name="checkBoxPreferChecklistAlgs"
                                Margin="0,8,0,0"
                                Padding="4,0,0,0"
                                Content="首选校验依据文件内容指定算法，次选校验依据文件扩展名指定算法"
                                IsChecked="{Binding PreferChecklistAlgs, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <StackPanel Margin="20,4,0,4" Orientation="Horizontal">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Foreground="Black"
                                    Text="当校验依据文件内容和扩展名皆未指定算法时：" />
                                <ComboBox
                                    DisplayMemberPath="Display"
                                    IsEnabled="{Binding ElementName=checkBoxPreferChecklistAlgs, Path=IsChecked}"
                                    ItemsSource="{Binding AvailableFetchAlgoOptions}"
                                    SelectedValue="{Binding FetchAlgorithmOption, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    SelectedValuePath="ItemValue" />
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox
                        Margin="0,8,0,0"
                        Foreground="#FF006FD6"
                        Header="监控剪贴板中新复制的哈希信息用于校验">
                        <StackPanel>
                            <CheckBox
                                x:Name="checkBoxVerifyWhenClipbaordNewHash"
                                Margin="0,8,0,0"
                                Padding="4,0,0,0"
                                Content="有新复制的哈希信息时自动填充校验依据文本框并校验"
                                IsChecked="{Binding MonitorNewHashStringInClipboard, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox
                                Margin="20,4,0,0"
                                Padding="4,0,0,0"
                                Content="完成哈希值校验后把主窗口带到前台 (管理员模式下可能不生效)"
                                IsChecked="{Binding SwitchMainWndFgWhenNewHashCopied, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                IsEnabled="{Binding ElementName=checkBoxVerifyWhenClipbaordNewHash, Path=IsChecked}" />
                            <StackPanel
                                Margin="20,4,0,4"
                                IsEnabled="{Binding ElementName=checkBoxVerifyWhenClipbaordNewHash, Path=IsChecked}"
                                Orientation="Horizontal">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Foreground="Black"
                                    Text="复制的字符数在此范围内时才触发 (默认8~512)：" />
                                <TextBox
                                    MinWidth="50"
                                    Padding="0,2"
                                    VerticalAlignment="Center"
                                    Text="{Binding MinCopiedCharsToTriggerHashCheck, Converter={StaticResource StringToIntDefaultEightCvt}, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Foreground="Black"
                                    Text=" ~ " />
                                <TextBox
                                    MinWidth="50"
                                    Padding="0,2"
                                    VerticalAlignment="Center"
                                    Text="{Binding MaxCopiedCharsToTriggerHashCheck, Converter={StaticResource StringToIntDefaultFiveTwelveCvt}, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <StackPanel Margin="0,8,0,0" Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center" Text="校验时自动把算法切换到：" />
                        <ComboBox
                            DisplayMemberPath="Display"
                            ItemsSource="{Binding AvailableResultsToSwitchTo}"
                            SelectedValue="{Binding AlgoToSwitchToAfterHashChecked}"
                            SelectedValuePath="ItemValue" />
                    </StackPanel>
                    <CheckBox
                        Margin="0,8,0,0"
                        Padding="4,0,0,0"
                        Content="不要计算空文件的哈希值以避免造成【文件内容相同】的误导"
                        IsChecked="{Binding DoNotHashForEmptyFile, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <CheckBox
                        Margin="0,8,0,0"
                        Padding="4,0,0,0"
                        Content="所有任务完成计算后使用颜色来标记哈希值相同的行"
                        IsChecked="{Binding MarkTheSameHashValues, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock
                        Margin="18,2,0,0"
                        FontSize="8pt"
                        Style="{StaticResource DescTextBlockStyle}"
                        Text="此项功能是筛选与操作面板的【相同哈希值】筛选器的简化便捷版，只关注当前算法" />
                    <CheckBox
                        Margin="0,8,0,0"
                        Padding="4,0,0,0"
                        Content="右键选择删除文件时直接永久删除而不是移动到回收站"
                        IsChecked="{Binding PermanentlyDeleteFiles, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <CheckBox
                        Margin="0,8,0,0"
                        Padding="4,0,0,0"
                        Content="允许运行多个应用程序实例，包括被系统右键菜单或关联的文件启动"
                        IsChecked="{Binding RunInMultiInstMode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
            </ScrollViewer>
        </TabItem>
        <TabItem
            Padding="8"
            Header="界面设置选项"
            Style="{StaticResource TabItemStyle1}">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="8">
                    <CheckBox
                        Padding="4,0,0,0"
                        Content="不显示【序号】列"
                        IsChecked="{Binding NoSerialNumColumn, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <CheckBox
                        Margin="0,4,0,0"
                        Padding="4,0,0,0"
                        Content="不显示【完整路径】列"
                        IsChecked="{Binding NoFullPathColumn, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <CheckBox
                        Margin="0,4,0,0"
                        Padding="4,0,0,0"
                        Content="不显示【文件大小】列"
                        IsChecked="{Binding NoFileSizeColumn, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <CheckBox
                        Margin="0,4,0,0"
                        Padding="4,0,0,0"
                        Content="不显示【输出方式】列"
                        IsChecked="{Binding NoOutputTypeColumn, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <CheckBox
                        Margin="0,4,0,0"
                        Padding="4,0,0,0"
                        Content="不显示【任务耗时】列"
                        IsChecked="{Binding NoDurationColumn, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <CheckBox
                        Margin="0,4,0,0"
                        Padding="4,0,0,0"
                        Content="不显示【导出】列"
                        IsChecked="{Binding NoExportColumn, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <CheckBox
                        Margin="0,4,0,0"
                        Padding="4,0,0,0"
                        Content="不显示【校验结果】列"
                        IsChecked="{Binding NoCmpResultColumn, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <CheckBox
                        Margin="0,4,0,0"
                        Padding="4,0,0,0"
                        Content="在校验结果的色块中显示描述文字"
                        IsChecked="{Binding ShowResultText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <CheckBox
                        Margin="0,4,0,0"
                        Padding="4,0,0,0"
                        Content="使【筛选与操作】窗口跟随主窗口移动"
                        IsChecked="{Binding FilterAndCmderWndFollowsMainWnd, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <StackPanel Margin="0,4,0,0">
                        <CheckBox
                            Padding="4,0,0,0"
                            Content="显示主窗口工具按钮"
                            IsChecked="{Binding DisplayMainWindowButtons, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <TextBlock
                            Margin="16,2,0,0"
                            Style="{StaticResource DescTextBlockStyle}"
                            Text="取消勾选并关闭设置面板后可通过点击右键菜单“显示工具按钮”重新显示" />
                    </StackPanel>
                    <CheckBox
                        Margin="0,4,0,0"
                        Padding="4,0,0,0"
                        Content="显示主窗口工具按钮的名称"
                        IsChecked="{Binding DisplayMainWndButtonText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <CheckBox
                        Margin="0,4,0,0"
                        Padding="4,0,0,0"
                        Content="显示新添加到表格的文件的图标"
                        IsChecked="{Binding ShowFileIcon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <GroupBox
                        Margin="0,8,0,0"
                        Padding="0,2,0,0"
                        Foreground="#FF006FD6"
                        Header="用颜色来标记哈希值相同的行时的颜色参数">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Foreground="Black"
                                Text="颜色亮度：" />
                            <Slider
                                Grid.Column="1"
                                Maximum="230"
                                Minimum="30"
                                TickFrequency="1"
                                Value="{Binding LuminanceOfTableRowsWithSameHash, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBlock
                                Grid.Column="2"
                                Width="30"
                                Margin="4,0,0,0"
                                Foreground="Black"
                                Text="{Binding LuminanceOfTableRowsWithSameHash}" />
                            <TextBlock
                                Grid.Column="3"
                                Margin="16,0,0,0"
                                VerticalAlignment="Center"
                                Foreground="Black"
                                Text="饱和度：" />
                            <Slider
                                Grid.Column="4"
                                Maximum="240"
                                Minimum="10"
                                TickFrequency="1"
                                Value="{Binding SaturationOfTableRowsWithSameHash, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBlock
                                Grid.Column="5"
                                Width="30"
                                Margin="4,0,0,0"
                                Foreground="Black"
                                Text="{Binding SaturationOfTableRowsWithSameHash}" />
                        </Grid>
                    </GroupBox>
                    <GroupBox
                        Margin="0,4,0,0"
                        Padding="0,2,0,0"
                        Foreground="#FF006FD6"
                        Header="相同哈希值筛选器给哈希值列上色时的颜色参数">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Foreground="Black"
                                Text="颜色亮度：" />
                            <Slider
                                Grid.Column="1"
                                Maximum="230"
                                Minimum="30"
                                TickFrequency="1"
                                Value="{Binding LuminanceOfTableCellsWithSameHash, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBlock
                                Grid.Column="2"
                                Width="30"
                                Margin="4,0,0,0"
                                Foreground="Black"
                                Text="{Binding LuminanceOfTableCellsWithSameHash}" />
                            <TextBlock
                                Grid.Column="3"
                                Margin="16,0,0,0"
                                VerticalAlignment="Center"
                                Foreground="Black"
                                Text="饱和度：" />
                            <Slider
                                Grid.Column="4"
                                Maximum="240"
                                Minimum="10"
                                TickFrequency="1"
                                Value="{Binding SaturationOfTableCellsWithSameHash, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBlock
                                Grid.Column="5"
                                Width="30"
                                Margin="4,0,0,0"
                                Foreground="Black"
                                Text="{Binding SaturationOfTableCellsWithSameHash}" />
                        </Grid>
                    </GroupBox>
                    <GroupBox
                        Margin="0,4,0,0"
                        Padding="0,2,0,0"
                        Foreground="#FF006FD6"
                        Header="相同文件夹筛选器给文件名列上色时的颜色参数">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Foreground="Black"
                                Text="颜色亮度：" />
                            <Slider
                                Grid.Column="1"
                                Maximum="230"
                                Minimum="30"
                                TickFrequency="1"
                                Value="{Binding LuminanceOfTableCellsWithSameDirectory, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBlock
                                Grid.Column="2"
                                Width="30"
                                Margin="4,0,0,0"
                                Foreground="Black"
                                Text="{Binding LuminanceOfTableCellsWithSameDirectory}" />
                            <TextBlock
                                Grid.Column="3"
                                Margin="16,0,0,0"
                                VerticalAlignment="Center"
                                Foreground="Black"
                                Text="饱和度：" />
                            <Slider
                                Grid.Column="4"
                                Maximum="240"
                                Minimum="10"
                                TickFrequency="1"
                                Value="{Binding SaturationOfTableCellsWithSameDirectory, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBlock
                                Grid.Column="5"
                                Width="30"
                                Margin="4,0,0,0"
                                Foreground="Black"
                                Text="{Binding SaturationOfTableCellsWithSameDirectory}" />
                        </Grid>
                    </GroupBox>
                    <Button
                        Margin="0,4,0,0"
                        Padding="8,2"
                        HorizontalAlignment="Left"
                        Background="{x:Null}"
                        Command="{Binding ResetLuminanceAndSaturationValuesCmd}"
                        Content="重置所有颜色亮度和饱和度值" />
                    <Button
                        Margin="0,8,0,0"
                        Padding="8,2"
                        HorizontalAlignment="Left"
                        Background="{x:Null}"
                        Click="ResetMainWindowDataGridColumnsIndex"
                        Content="重置主窗口表格所有列的顺序" />
                    <Button
                        Margin="0,8,0,0"
                        Padding="8,2"
                        HorizontalAlignment="Left"
                        Background="{x:Null}"
                        Click="ResetMainWindowDataGridColumnsWidth"
                        Content="重置主窗口表格所有列的宽度" />
                </StackPanel>
            </ScrollViewer>
        </TabItem>
        <TabItem
            Padding="8"
            Header="任务设置选项"
            Style="{StaticResource TabItemStyle1}">
            <StackPanel Margin="8">
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        Foreground="Black"
                        Text="同时进行的任务数上限：" />
                    <ComboBox
                        DisplayMemberPath="Display"
                        ItemsSource="{Binding AvailableTaskNumLimits}"
                        SelectedValue="{Binding SelectedTaskNumberLimit, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        SelectedValuePath="ItemValue" />
                </StackPanel>
                <TextBlock
                    Margin="18,2,0,0"
                    FontSize="8pt"
                    Style="{StaticResource DescTextBlockStyle}"
                    Text="任务数上限选项中除了 1，其他选项都与下一个设置互斥，无法同时开启；" />
                <TextBlock
                    Margin="18,0,0,0"
                    FontSize="8pt"
                    Style="{StaticResource DescTextBlockStyle}"
                    Text="盲目选择高任务上限不一定能加快文件哈希值的计算速度" />
                <CheckBox
                    Margin="0,8,0,0"
                    Padding="4,0,0,0"
                    Content="任务包含多个算法时多个算法之间并行计算"
                    IsChecked="{Binding ParallelBetweenAlgos, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <CheckBox
                    Margin="0,8,0,0"
                    Padding="4,0,0,0"
                    Content="延迟启动被添加到表格中的哈希值计算任务"
                    IsChecked="{Binding DelayTheStartOfCalculationTasks, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <StackPanel Margin="18,2,0,0" Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center" Text="延迟启动的毫秒数：" />
                    <TextBox
                        MinWidth="100"
                        Padding="0,1"
                        MaxLines="1"
                        Text="{Binding MillisecondsOfDelayedStartup, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
                </StackPanel>
                <TextBlock
                    Margin="18,2,0,0"
                    FontSize="8pt"
                    Style="{StaticResource DescTextBlockStyle}"
                    Text="此项设置可一定程度缓解“添加任务”和“启动任务”同时进行导致的表格显示卡顿" />
                <CheckBox
                    Margin="0,8,0,0"
                    Padding="4,0,0,0"
                    Content="文件被添加后自动启动对该文件的计算任务"
                    IsChecked="{Binding AutomaticallyStartTaskAfterFileAdded, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
        </TabItem>
        <TabItem
            Padding="8"
            Header="快捷菜单与文件关联"
            Style="{StaticResource TabItemStyle1}">
            <StackPanel>
                <GroupBox
                    Margin="4"
                    Padding="4,8,4,4"
                    Foreground="#FF006FD6"
                    Header="扩展系统右键菜单和关联 .hcb 文件">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Button
                                Padding="32,8"
                                Background="{x:Null}"
                                Command="{Binding InstallShellExtCmd}"
                                Content="安装右键菜单并关联文件"
                                IsEnabled="{Binding ProcessingShellExtension, Converter={StaticResource ReverseBooleanValueCvt}}" />
                            <Button
                                Margin="32,0,0,0"
                                Padding="32,8"
                                Background="{x:Null}"
                                Command="{Binding UnInstallShellExtCmd}"
                                Content="卸载右键菜单并取消关联"
                                IsEnabled="{Binding ProcessingShellExtension, Converter={StaticResource ReverseBooleanValueCvt}}" />
                        </StackPanel>
                        <StackPanel Margin="0,8,0,0" Orientation="Horizontal">
                            <TextBlock Foreground="Black" Text="安装状态：" />
                            <TextBlock Style="{StaticResource DescTextBlockStyle}" Text="{Binding DisplayingShellInstallationState}" />
                        </StackPanel>
                        <StackPanel Margin="0,2,0,0" Orientation="Horizontal">
                            <TextBlock Foreground="Black" Text="安装位置：" />
                            <TextBlock Style="{StaticResource DescTextBlockStyle}" Text="{Binding DisplayingShellExtensionDir}" />
                        </StackPanel>
                        <StackPanel Margin="0,2,0,0" Orientation="Horizontal">
                            <TextBlock Foreground="Black" Text="生效范围：" />
                            <TextBlock Style="{StaticResource DescTextBlockStyle}" Text="{Binding DisplayingShellInstallationScope}" />
                        </StackPanel>
                        <StackPanel Margin="0,16,0,0">
                            <TextBlock
                                FontSize="8pt"
                                Style="{StaticResource DescTextBlockStyle}"
                                Text="1. 状态为未安装时【安装位置】跟随配置文件的保存位置，已安装则表示实际安装位置" />
                            <TextBlock
                                Margin="0,4,0,0"
                                FontSize="8pt"
                                Style="{StaticResource DescTextBlockStyle}"
                                Text="2. 状态为未安装时【生效范围】是指如果安装后将会生效的范围，已安装则表示实际生效范围" />
                            <TextBlock
                                Margin="0,4,0,0"
                                FontSize="8pt"
                                Style="{StaticResource DescTextBlockStyle}"
                                Text="3. 以管理员身份启动 HashCalculator 后安装则【生效范围】是当前系统，否则是当前用户" />
                            <StackPanel Margin="0,4,0,0" Orientation="Horizontal">
                                <TextBlock
                                    FontSize="8pt"
                                    Style="{StaticResource DescTextBlockStyle}"
                                    Text="4. 安装右键菜单后，程序会在 " />
                                <TextBlock
                                    Cursor="Hand"
                                    Foreground="Blue"
                                    MouseLeftButtonDown="OnTextBlockMouseLeftButtonDown"
                                    Text="{Binding Source={x:Static local:SettingsViewModel.ShellExtDir}}" />
                                <TextBlock
                                    FontSize="8pt"
                                    Style="{StaticResource DescTextBlockStyle}"
                                    Text=" 下释放外壳扩展模块 (HashCalculator[32].dll 文件)" />
                            </StackPanel>
                            <TextBlock
                                Margin="0,4,0,0"
                                FontSize="8pt"
                                Style="{StaticResource DescTextBlockStyle}"
                                Text="5. 不可强制移动、删除、重命名 HashCalculator[32].dll 文件，否则右键菜单将失效" />
                            <StackPanel Margin="0,4,0,0" Orientation="Horizontal">
                                <TextBlock
                                    FontSize="8pt"
                                    Style="{StaticResource DescTextBlockStyle}"
                                    Text="6. 移动或重命名 HashCalculator.exe 文件后，需 " />
                                <TextBlock
                                    Cursor="Hand"
                                    Foreground="Red"
                                    MouseLeftButtonDown="OnTextBlockMouseLeftButtonDown"
                                    Text="{Binding Source={x:Static local:SettingsViewModel.UpdateExePath}}" />
